<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    tools:context=".TermsAndAgreementActivity">

    <!-- Header Section with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_button_icon"
            android:scaleType="centerInside" />

        <!-- Terms and Agreement Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terms and Agreement"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer to balance the back button -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Terms and Agreement Content Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <!-- Terms and Agreement Heading -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and Agreement:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Introduction -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to FridgeWatch. By using this application, you agree to the following terms and conditions:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- Terms Content -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Purpose of the App:\nFridgeWatch is an IoT + Android application that notifies users when a refrigerator door is left open and monitors its duration. This project is designed for educational and practical use to help users manage their refrigerator usage more efficiently.\n\n2. User Responsibilities:\nUsers are responsible for properly setting up and connecting their device (ESP32, sensor, Android app) and keeping their mobile device connected to the internet for real-time notifications. Users must ensure proper installation and maintenance of the hardware components.\n\n3. Data and Privacy:\nThe app collects fridge door status and alert logs, which are stored securely in the cloud (Firebase). No personal information will be shared with third parties. By using this app, you agree to allow the app to store and process your fridge usage data for the purpose of providing notifications and monitoring services.\n\n4. Limitations of Liability:\nFridgeWatch is a prototype project and should not be solely relied upon for food safety. The development team is not responsible for any damages, food spoilage, or energy loss caused by misuse or technical errors. Users should always verify food safety independently.\n\n5. Modifications:\nThe developers may update the application to improve performance, fix bugs, or add new features. Continued use of the application implies acceptance of any revised terms and conditions.\n\n6. Acceptance:\nBy installing and using FridgeWatch, you acknowledge that you have read, understood, and agreed to these terms and conditions."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Accept and Continue Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/accept_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Accept and Continue"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/accept_button_background"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="16dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:tint="@color/white"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/bell_icon"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/notification_icon"
            android:tint="@color/white"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/menu_icon"
            android:tint="@color/white"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>